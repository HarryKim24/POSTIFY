{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", 
    "rootDir": "./" 
  },
  "include": [
    "server.ts",        
    "middleware/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "types/**/*.ts",
    "uploads/**/*.ts",
    "utils/**/*.ts",
  ],
  "exclude": [
    "node_modules", 
    "dist"
  ]
}
